<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="colorPrimaryDark">@color/colorWhite</item>-->
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="progressBarStyle" parent="@android:style/Widget.Holo.ProgressBar">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
